<h1>Wods</h1>
<hr>
<div class="d-flex flex-wrap justify-content-center">
  <% @wods.each do |wod| %>    
    <div class="card wod-card">
      <div class="card-header">
        <%= wod.title %>
      </div>
      <div class="card-body">
        <p class="card-text"><%= wod.description.html_safe %></p>
      </div>
      <div class="card-footer">
        <a href="<%= wod_path(wod) %>" class="btn btn-primary">Open Wod</a>
      </div>
    </div>
  <% end %>
</div>