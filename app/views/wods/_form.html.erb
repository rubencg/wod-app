<%= form_with(model: wod, local: true) do |form| %>
  <% if wod.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(wod.errors.count, "error") %> prohibited this wod from being saved:

      <ul>
        <% wod.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= form.label :title, autofocus: true %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 6 %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= form.label :notes %>
        <%= form.text_area :notes, class: "form-control", rows: 6 %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= collection_select(:wod, :category_id, Category.new_wod_categories, :id, :name, {:prompt=>true}, {:class=>'form-control'} ) %>
  </div>


  <div class="form-group">
    <%= form.submit "Create", class: "btn btn-success" %>
  </div>

<% end %>
